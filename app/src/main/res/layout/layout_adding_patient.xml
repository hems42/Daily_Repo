<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="4dp"
        app:cardCornerRadius="20dp"
        android:elevation="10dp"
        android:id="@+id/bottom_sheet_lyt_add_patient"
        android:backgroundTint="@android:color/darker_gray"
>

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:paddingBottom="7dp"
                android:text="Hasta Ekleme"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:id="@+id/txt_lyt_add_patient_title"

                android:textStyle="bold"/>

        <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#304FFE"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:text="sayfayı yenile"
                android:id="@+id/btn_lyt_add_refresh_form"
                />


        <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtxt_lyt_add_patient_tc_no"
                android:hint="TC kimlik numarası"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:ems="1"
                android:textColorHint="@android:color/white"
                android:layout_margin="3dp"
        />


        <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtxt_lyt_add_patient_name"
                android:hint="hasta adı"
                android:ems="1"
                android:textAlignment="center"
                android:textColorHint="@android:color/white"
                android:layout_margin="3dp"
        />


        <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtxt_lyt_add_patient_surname"
                android:hint="hasta soyadı"
                android:ems="1"
                android:textAlignment="center"
                android:textColorHint="@android:color/white"
                android:layout_margin="3dp"
        />


        <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtxt_lyt_add_patient_birthday"
                android:hint="doğum tarihi"
                android:ems="1"
                android:textAlignment="center"
                android:textColorHint="@android:color/white"
                android:layout_margin="3dp"
        />

        <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtxt_lyt_add_patient_sex"
                android:hint="cinsiyet"
                android:ems="1"
                android:textAlignment="center"
                android:textColorHint="@android:color/white"
                android:layout_margin="3dp"
        />



        <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtxt_lyt_add_patient_dependency"
                android:hint="bağımlılık durumu"
                android:textAlignment="center"
                android:ems="1"
                android:textColorHint="@android:color/white"
                android:layout_margin="3dp"
        />




        <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtxt_lyt_add_patient_finasitution"
                android:hint="son durumu"
                android:visibility="gone"
                android:textAlignment="center"
                android:textColorHint="@android:color/white"
                android:layout_margin="3dp"
        />






        <androidx.appcompat.widget.AppCompatButton

                android:backgroundTint="@android:color/holo_red_dark"
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content"
                android:text="KAYDET"
                android:textColor="@android:color/white"
                android:id="@+id/btn_lyt_add_patient_ok"

        />

        <androidx.appcompat.widget.AppCompatButton

                android:backgroundTint="@android:color/holo_green_light"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content"
                android:text="VAZGEÇ"
                android:textColor="@android:color/white"
                android:id="@+id/btn_lyt_add_patient_cancel"
                android:layout_marginBottom="40dp"


        />

    </LinearLayout>

</androidx.cardview.widget.CardView>