<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="12dp"
        android:elevation="10dp"

        android:backgroundTint="@android:color/darker_gray"
>

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:paddingBottom="7dp"
                android:text="Ziyaret Ekleme"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textColor="@android:color/black"
                android:textSize="22dp"
                android:textStyle="bold"/>



        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:paddingBottom="7dp"
                android:text="Lütfen imzanızı ve notunuzu ekleyin!!"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textColor="@android:color/white"
                android:textSize="21dp"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:clickable="false"
                android:layout_gravity="center"
                >


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="notu temizle"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@android:color/holo_orange_dark"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:id="@+id/txt_lyt_add_visit_note_refresh"
                    />


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@android:color/holo_green_dark"
                    android:text="imzayı temizle"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:id="@+id/txt_lyt_add_visit_sing_refresh"
            />


            <!--        >
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/refresh"
                        android:clickable="true"
                        android:id="@+id/img_lyt_add_visit_note_refresh"
                        android:background="@drawable/ripple"
                        app:tint="@android:color/white"/>


                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="#D32F2F"
                        android:clickable="true"

                        android:id="@+id/img_lyt_add_visit_sign_refresh"
                        android:background="@drawable/ripple"
                        android:src="@drawable/refresh"
                        app:tint="@android:color/holo_red_dark"/>-->


        </LinearLayout>



        <androidx.cardview.widget.CardView


                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:backgroundTint="#D32F2F"

                app:cardCornerRadius="28dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="#FFCCBD"
        >



            <Utils.DigitalSign
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_margin="7dp"
                    android:layout_gravity="center"
                    android:id="@+id/dgtl_sign_lyt_add_visit"
                    android:background="@android:color/white"
                    android:layout_marginBottom="5dp"
                    android:contextClickable="true"
                    android:clickable="true"

            />

        </androidx.cardview.widget.CardView>



        <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/edtxt_lyt_add_visit"
                android:hint="notunuzu ekleyin ya da uzun basın..."
                android:textAlignment="center"
                android:textColorHint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                />


        <androidx.appcompat.widget.AppCompatButton
                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:backgroundTint="@android:color/holo_red_dark"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:text="TAMAM"
                android:textColor="@android:color/white"
                android:id="@+id/btn_lyt_add_visit_ok"

        />

        <androidx.appcompat.widget.AppCompatButton
                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:backgroundTint="@android:color/holo_green_light"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:text="Vazgeç"
                android:textColor="@android:color/white"
                android:id="@+id/btn_lyt_add_visit_cancel"

        />


    </LinearLayout>

</androidx.cardview.widget.CardView>