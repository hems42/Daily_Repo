<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="12dp"
        android:elevation="10dp"

        android:backgroundTint="@android:color/darker_gray"
>

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:paddingBottom="7dp"
                android:text="Ziyaret Ekleme"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textColor="@android:color/black"
                android:textSize="22dp"
                android:textStyle="bold"/>



        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:paddingBottom="7dp"
                android:text="Lütfen imzanızı ve notunuzu ekleyin!!"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textColor="@android:color/white"
                android:textSize="21dp"
                />


        <androidx.cardview.widget.CardView


                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:backgroundTint="#D32F2F"

                app:cardCornerRadius="28dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="#FFCCBD"
        >
            <Utils.DigitalSign
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="7dp"
                    android:layout_gravity="center"
                    android:id="@+id/dgtl_sign_lyt_add_visit"
                    android:background="@android:color/white"
                    android:layout_marginBottom="5dp"
            />

        </androidx.cardview.widget.CardView>



        <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/edtxt_lyt_add_visit"
                android:hint="lütfen notunuzu ekleyin..."
                android:textAlignment="center"
                android:textColorHint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                />


        <androidx.appcompat.widget.AppCompatButton
                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:backgroundTint="@android:color/holo_red_dark"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:text="TAMAM"
                android:textColor="@android:color/white"
                android:id="@+id/btn_lyt_add_visit_ok"

        />

        <androidx.appcompat.widget.AppCompatButton
                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:backgroundTint="@android:color/holo_green_light"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:text="Vazgeç"
                android:textColor="@android:color/white"
                android:id="@+id/btn_lyt_add_visit_cancel"

        />


    </LinearLayout>

</androidx.cardview.widget.CardView>