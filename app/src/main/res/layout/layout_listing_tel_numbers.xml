<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="12dp"
        app:cardCornerRadius="15dp"
        android:elevation="10dp"

        android:backgroundTint="@android:color/darker_gray"
>

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:paddingBottom="7dp"
                android:text="Kayıtlı Tel. Numaraları\n (arama yapmak için seçiniz)"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textColor="@android:color/white"
                android:textSize="21dp"
                android:textStyle="bold"/>

        <ListView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/listview_lyt_listing_tel_numbers"
                android:layout_margin="3dp"
                android:elevation="10dp"
                android:clickable="true"
                android:contextClickable="true"
                android:choiceMode="singleChoice"
                style="@android:style/Widget.Holo.ListView"
                />



        <androidx.appcompat.widget.AppCompatButton
                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:backgroundTint="@android:color/holo_red_dark"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:text="TEL NO EKLE"
                android:textColor="@android:color/white"
                android:id="@+id/btn_lyt_listing_tel_number_ad_number"

        />

        <androidx.appcompat.widget.AppCompatButton
                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:backgroundTint="@android:color/holo_green_light"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:text="Vazgeç"
                android:textColor="@android:color/white"
                android:id="@+id/btn_lyt_listing_tel_number_cancel"

        />


    </LinearLayout>

</androidx.cardview.widget.CardView>