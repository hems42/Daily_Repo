<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DDAEEA00"

>

    <androidx.cardview.widget.CardView


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#C39040E6"
            android:layout_weight="1"
            app:cardCornerRadius="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="#FFCCBD"
    >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginRight="2dp"
                      android:layout_marginLeft="2dp"
                      android:layout_marginTop="2dp"
                      android:layout_marginBottom="3dp"

        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ZİYARET LİSTESİ"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="23sp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/txt_layout_visit_list_baslik_yazisi"
                    android:gravity="center"
                    android:layout_gravity="center"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Listelenen Ziyaret Sayısı: "
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="15dp"

                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/txt_layout_visit_list_listelenen_ziayret_sayisi"
                        android:paddingLeft="5dp"

                />



            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/back"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/img_layout_visit_list_dialog_geri_don"
                        android:clickable="true"
                        android:background="@drawable/ripple"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:text="GERİ DÖN"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"

                />



            </LinearLayout>




            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="318dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/recyclerview_frg_ziyaretlistesi_tum"

            />







            />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>
