<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="20dp"
        android:elevation="10dp"

        android:id="@+id/layout_change_password"
        android:backgroundTint="@android:color/darker_gray"
>

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:paddingBottom="7dp"
                android:text="Parola Değiştirme"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textColor="@android:color/white"
                android:textSize="22dp"

                android:textStyle="bold"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#304FFE"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:text="sayfayı yenile"
                android:id="@+id/btn_lyt_change_password_refresh_form"
                />


        <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtxt_lyt_change_password_current_password"
                android:hint="geçerli parolayı girin!!"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:ems="1"
                android:textColorHint="@android:color/white"
                android:layout_margin="3dp"
        />


        <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtxt_lyt_change_password_new_password"
                android:hint="yeni parolayı girin!!"
                android:inputType="numberDecimal|numberPassword"
                android:textAlignment="center"
                android:ems="1"
                android:textColorHint="@android:color/white"
                android:layout_margin="3dp"
        />


        <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtxt_lyt_change_password_new_password_again"
                android:hint="yeni parolayı tekrar girin!!"
                android:textAlignment="center"
                android:inputType="numberPassword"
                android:ems="1"
                android:textColorHint="@android:color/white"
                android:layout_margin="3dp"
        />






        <androidx.appcompat.widget.AppCompatButton

                android:backgroundTint="@android:color/holo_red_dark"
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content"
                android:text="KAYDET"
                android:textColor="@android:color/white"

                android:id="@+id/btn_lyt_change_password_ok"

        />

        <androidx.appcompat.widget.AppCompatButton

                android:backgroundTint="@android:color/holo_green_light"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content"
                android:text="VAZGEÇ"

                android:textColor="@android:color/white"
                android:id="@+id/btn_lyt_change_password_cancel"
                android:layout_marginBottom="40dp"


        />

    </LinearLayout>

</androidx.cardview.widget.CardView>