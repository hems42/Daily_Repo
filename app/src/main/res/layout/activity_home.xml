<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="end"
        android:id="@+id/layout_drawer_home_activty"
        tools:context="Activities.HomeActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/wave_2"
            android:id="@+id/activity_home_coordinator_layout"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="60dp"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/shape_rect"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ANA SAYFA"
                    android:textStyle="bold|italic"
                    android:textSize="40sp"
                    android:paddingLeft="25dp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/white"

            />

        </LinearLayout>


        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="301dp"
                app:cardCornerRadius="18dp"
                android:layout_gravity="center"
                android:layout_margin="9dp"
                android:backgroundTint="#00B0FF"
        >


            <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:rowCount="3"
                    android:columnCount="3"
                    android:elevation="10dp"
                    android:orientation="vertical"
            >

                <androidx.cardview.widget.CardView
                        android:layout_height="110dp"
                        android:layout_width="110dp"
                        android:layout_row="0"
                        android:clickable="true"
                        android:background="@drawable/ripple"
                        android:id="@+id/crdview_home_activty_hastalar"
                        android:layout_margin="6dp"
                        android:layout_column="0"
                        app:cardCornerRadius="12dp"
                        android:backgroundTint="#6200EA"
                >
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                    >

                        <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/community"
                        />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="HASTALAR"
                                android:textColor="@android:color/white"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textSize="15sp"
                        />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_height="110dp"
                        android:layout_width="110dp"
                        android:layout_row="0"
                        android:clickable="true"
                        android:id="@+id/crdview_home_activty_ziyaretler"
                        android:layout_margin="6dp"
                        android:background="@drawable/ripple"
                        android:layout_column="1"
                        app:cardCornerRadius="12dp"
                        android:backgroundTint="#304FFE"
                >
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                    >

                        <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/home2"
                        />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ZİYARETLER"
                                android:textColor="@android:color/white"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textSize="15sp"
                        />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_height="110dp"
                        android:layout_width="110dp"
                        android:layout_row="0"
                        android:background="@drawable/ripple"
                        android:clickable="true"
                        android:id="@+id/crdview_home_activty_randevuler"
                        android:layout_margin="6dp"
                        android:layout_column="2"
                        app:cardCornerRadius="12dp"
                        android:backgroundTint="#129E4C"
                >
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                    >

                        <ImageView
                                android:layout_width="90dp"
                                android:layout_height="80dp"
                                android:src="@drawable/icon_4"
                        />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="RANDEVÜLER"
                                android:textColor="@android:color/white"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textSize="15sp"
                        />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                        android:layout_height="110dp"
                        android:layout_width="110dp"
                        android:layout_row="1"
                        android:id="@+id/crdview_home_activty_istatistikler"
                        android:background="@drawable/ripple"
                        android:clickable="true"
                        android:layout_margin="6dp"
                        android:layout_column="0"
                        app:cardCornerRadius="12dp"
                        android:backgroundTint="#FFAB00"
                >
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                    >

                        <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/grafik"
                        />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="İSTATİSTİKLER"
                                android:textColor="@android:color/white"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textSize="15sp"
                        />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_height="110dp"
                        android:layout_width="110dp"
                        android:layout_row="1"
                        android:id="@+id/crdview_home_activty_veri_yonetimi"
                        android:clickable="true"
                        android:background="@drawable/ripple"
                        android:layout_margin="6dp"
                        android:layout_column="1"
                        app:cardCornerRadius="12dp"
                        android:backgroundTint="#C51162"
                >
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                    >

                        <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/database"
                        />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="VERİ YÖNETİMİ"
                                android:textColor="@android:color/white"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textSize="15sp"
                        />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_height="110dp"
                        android:layout_width="110dp"
                        android:layout_row="1"
                        android:clickable="true"
                        android:id="@+id/crdview_home_activty_gun_ozeti"
                        android:background="@drawable/ripple"
                        android:layout_margin="6dp"
                        android:layout_column="2"
                        app:cardCornerRadius="12dp"
                        android:backgroundTint="@android:color/darker_gray"
                >
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                    >

                        <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/today_2"
                        />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="GÜNÜN ÖZETİ"
                                android:textColor="@android:color/white"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textSize="15sp"
                        />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </GridLayout>


        </androidx.cardview.widget.CardView>

        <com.google.android.material.bottomappbar.BottomAppBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bottomAppBar_home"
                android:layout_gravity="bottom"
                app:fabCradleMargin="10dp"
                app:fabAlignmentMode="end"
                app:fabAnimationMode="slide"
                app:menu="@menu/menu_app_bar_app_home"
                app:fabCradleRoundedCornerRadius="10dp"
                app:fabCradleVerticalOffset="5dp"

                app:navigationIcon="@drawable/ic_baseline_menu_24"
                android:backgroundTint="#3949AB"
                android:gravity="bottom"
        />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_person"
                android:background="@drawable/ripple"
                android:backgroundTint="@android:color/holo_green_light"
                android:tint="@android:color/white"
                app:layout_anchor="@id/bottomAppBar_home"
                app:maxImageSize="35dp"
                android:id="@+id/floating_button_home_activity"
        />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/menu_home_drawer"
            android:id="@+id/navi_view"
            android:scrollIndicators="start"
            android:nestedScrollingEnabled="true"
            app:headerLayout="@layout/lyt_drawerheader"
    />


</androidx.drawerlayout.widget.DrawerLayout>

