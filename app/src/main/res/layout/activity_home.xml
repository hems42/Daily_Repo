<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="end"

        android:id="@+id/layout_drawer_home_activty"
    >

    <androidx.coordinatorlayout.widget.CoordinatorLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="Activities.HomeActivity"
            android:id="@+id/activity_home"
    >






        <androidx.fragment.app.FragmentContainerView
                android:layout_width="match_parent"
                android:layout_height="675dp"
                android:background="@android:color/holo_purple"
                android:id="@+id/frg_container_activity_home"
        >


        </androidx.fragment.app.FragmentContainerView>




        <com.google.android.material.bottomappbar.BottomAppBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bottomAppBar_home"
                android:layout_gravity="bottom"
                app:fabCradleMargin="10dp"
                app:fabAlignmentMode="end"
                app:fabAnimationMode="slide"
                app:menu="@menu/menu_app_bar_app_home"
                app:fabCradleRoundedCornerRadius="10dp"
                app:fabCradleVerticalOffset="5dp"

                app:navigationIcon="@drawable/ic_baseline_menu_24"
                android:backgroundTint="@android:color/holo_red_dark"
                android:gravity="bottom"
        />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_person"
                android:backgroundTint="@android:color/holo_purple"
                android:tint="@android:color/white"
                app:layout_anchor="@id/bottomAppBar_home"
                app:maxImageSize="35dp"
                android:id="@+id/floating_button_home_activity"
        />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>



    <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/menu_home_drawer"
            android:id="@+id/navi_view"
            android:scrollIndicators="start"

            android:nestedScrollingEnabled="true"
            app:headerLayout="@layout/lyt_drawerheader"
    />

</androidx.drawerlayout.widget.DrawerLayout>

