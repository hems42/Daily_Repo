<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/bg_7"
        tools:context="Activities.LoginActivity"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/shape_rect"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GİRİŞ"
                android:textStyle="bold|italic"
                android:textSize="40sp"
                android:paddingLeft="25dp"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"

        />

    </LinearLayout>

    <ImageView

            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/icon_2"
            android:layout_marginBottom="10dp"
    />


    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/holo_red_dark"

            android:layout_height="wrap_content"
            android:hint="parola ya da parmakizi gerekli.."
            android:textColorHint="@android:color/black"
            android:textAlignment="center"
            android:textSize="16sp"
            android:inputType="numberPassword"
            android:id="@+id/edtxt_login_pasword"
            android:layout_margin="5dp"
    />
    <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login_ok"
            android:text="Giriş Yap"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textSize="16sp"
            app:cornerRadius="15dp"

            />


    <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login_change_password"
            android:text="parolamı değiştir"
            android:layout_marginLeft="15dp"
            android:textStyle="normal"
            android:textAppearance="@style/Widget.MaterialComponents.Button"
            android:layout_marginTop="5dp"
            android:textAlignment="textStart"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginRight="13dp"
            android:textColor="@android:color/black"

            android:textSize="14sp"
            app:cornerRadius="25dp"

    />



    <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:src="@drawable/finger_print"
            android:layout_marginTop="60dp"
            android:clickable="true"
            android:id="@+id/img_login_finger_print"
            app:tint="@android:color/white"/>


</LinearLayout>