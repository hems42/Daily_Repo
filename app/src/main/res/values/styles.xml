<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/holo_red_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/CustomBottomSheetDialogStyle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_toStartOf">@id/transition_current_scene</item>



    </style>

    <style name="AlertCustomDialog" parent="Theme.MaterialComponents.Dialog.Alert"
           >

        <item name="android:layout_width">match_parent</item>


        <item name="backgroundTint">@android:color/transparent</item>

    </style>

    <style name="CustomBottomSheetDialogStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">




        <item name="android:layout_width">match_parent</item>

           <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>

    </style>

    <style name="AlertDialogStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">




        <item name="android:layout_width">match_parent</item>

        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>

    </style>

</resources>